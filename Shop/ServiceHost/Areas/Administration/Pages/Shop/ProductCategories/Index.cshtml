@page
@model ServiceHost.Areas.Administration.Pages.Shop.ProductCategories.IndexModel
@{
    ViewData["Title"] = "مدیریت گروه محصولات";
}
<!-- Content -->
<!--Search-->
<div class="container-xxl flex-grow-1  cls-sj-saf---content-search-box">
    <div class="card mb-2">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">جستجو در گروه محصولات</h5>
            @*<small class="text-muted float-end">Default label</small>*@
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row mb-3">
                    <label class="col-sm-1 col-form-label" asp-for="SearchModel.Name">نام گروه محصولی</label>
                    <div class="col-sm-11">
                        <input type="text" class="form-control" id="basic-default-name" placeholder="نام گروه محصولی" asp-for="SearchModel.Name" />
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-11">
                        <button type="submit" class="btn btn-success">جستجو</button>
                        <a class="btn btn-primary" asp-page="./Index">مشاهده همه</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!--/Search-->
<div class="container-xxl flex-grow-1  cls-sj-saf---content-Table-box">
    <!-- Bootstrap Table with Header - Dark -->
    <div class="card">
        <div id="card-bar">
            <div id="card-bar-right">
                <h5 class="card-header">لیست گروه محصولات</h5>
            </div>
            <div id="card-bar-left">
                <a class ="btn btn-success" href="#showmodal=@Url.Page("./Index", "Create")">اضافه کردن +</a>
            </div>
        </div>


        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>نام</th>
                        <th>تاریخ ایجاد</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                @foreach (var item in Model.ProductCategories)
                {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                            <td><img src="@item.Picture" style="width: 70px;height: 70px"/></td>
                            <td>@item.Name</td>
                            <td>@item.CreationDate</td>
                            <td>
                                <a class="btn btn-warning pull-right m-rl-5"
                                   href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                    <i class="fa fa-edit"></i> ویرایش
                                </a>
                            </td>
                        </tr>
                }
                
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Bootstrap Table with Header Dark -->
</div>
<!-- / Content -->
